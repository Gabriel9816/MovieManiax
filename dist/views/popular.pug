html 
    head 
        link(rel="stylesheet" href="/source/css/style.css")
        link(href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Arvo&display=swap" rel="stylesheet")
        style.
            body.body-popular::before {
                content: "";
                position: fixed;
                top: -5px;
                left: -5px;
                width: 100vw;
                height: 101vh;
                background: #282e3a repeating-linear-gradient(0deg, black, transparent 100%) fixed;
                filter: blur(2px);
                opacity: 0.94;
                z-index: -1;
            }

    body.body-popular 
        style.
            body.body-popular{
                background: url(/source/img/fundo-filmes1.jpg) fixed;
                height: 100vh;
                background-size: cover;
                overflow-x: hidden;
                display: grid;
                scroll-behavior: smooth;
            }
        header.header 
            a.img(href="/user")
                img.logo(src="/source/img/MovieManiax logo.png" alt="logo")
            .search-box 
                input.search-txt(type="text")
                i.bx.bx-search 
            .links 
                a.l01(href="/filmes") Filmes
                a.l02(href="/superuser") Adicionar
                a.l03(href="/") Excluir
            .icones 
                a.icon1(href="/user/perfil") 
                    i.bx.bxs-user-circle#icon 
                a.icon2(href="/user/sair")
                    i.bx.bx-log-out#icon 
        .container
            h1.titulo Popular 
            .filmes-popular#img
                for films in carrossel
                    a.filmes-conteudo(href=`/filmes/detalhes/${films.id}`)
                        img(src=`data:image/${films.extensaoCapa};base64,${films.capa}`)
            .passa-slide 
                button(onclick="handleLeftClick()").seta-esquerda
                    i.bx.bx-chevron-left#seta
                button(onclick="handleRightClick()").seta-direita
                    i.bx.bx-chevron-right#seta
            h1.titulo Atividade da comunidade
            .comunidade
                for filme in filmes
                    .filmes-conteudo
                        a(href=`/filmes/detalhes/${filme.id}`)
                            img(src=`data:image/${filme.extensaoCapa};base64,${filme.capa}`)

    script.
        const slider = document.querySelector(".filmes-popular");

        const handleLeftClick = (e) => {
            console.log(slider);
            console.log(slider.offsetWidth);
            slider.scrollLeft -= slider.offsetWidth;
        }

        const handleRightClick = (e) => {
            console.log(slider);
            console.log(slider.offsetWidth);
            slider.scrollLeft += slider.offsetWidth;
        }